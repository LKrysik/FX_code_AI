# Staging Environment Configuration Template
# Copy this file to .env.staging and fill in your actual values
# NEVER commit .env.staging to version control!

# ============================================
# MEXC Exchange API Configuration (TESTNET)
# ============================================
# Use MEXC testnet for staging
MEXC_API_KEY=your_testnet_api_key_here
MEXC_API_SECRET=your_testnet_api_secret_here
MEXC_BASE_URL=https://contract.mexc.com/api/v1

# ============================================
# Database Configuration (QuestDB)
# ============================================
QUESTDB_HOST=questdb
QUESTDB_PORT=8812
QUESTDB_USER=admin
QUESTDB_PASSWORD=quest
QUESTDB_DATABASE=qdb

# ============================================
# Application Configuration
# ============================================
ENVIRONMENT=staging
LOG_LEVEL=DEBUG

# Risk Management Settings (More relaxed for testing)
MAX_POSITIONS=5
MAX_POSITION_SIZE=0.2
DAILY_LOSS_LIMIT=0.1
MARGIN_UTILIZATION_LIMIT=0.9

# Trading Settings
DEFAULT_LEVERAGE=1
MAX_SLIPPAGE=0.002

# ============================================
# Monitoring Configuration
# ============================================
PROMETHEUS_ENABLED=true
METRICS_PORT=8080

# Grafana Admin Credentials (use default for staging)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ============================================
# Alerting Configuration (Optional for staging)
# ============================================
# PagerDuty (disabled for staging)
PAGERDUTY_INTEGRATION_KEY=

# Slack (use test channel for staging)
SLACK_WEBHOOK_URL=

# Email (disabled for staging)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL_TO=

# ============================================
# Security Configuration
# ============================================
# JWT Secret (use simple secret for staging)
JWT_SECRET=staging_jwt_secret_change_in_production
JWT_EXPIRATION=7200

# API Rate Limiting (more relaxed)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=120

# ============================================
# Performance Configuration
# ============================================
# Worker processes (lower for staging)
WORKER_COUNT=2

# Connection pool sizes (lower for staging)
DB_POOL_MIN=2
DB_POOL_MAX=10

# Cache settings
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# Deployment Configuration
# ============================================
# Docker image tags
BACKEND_IMAGE_TAG=staging
FRONTEND_IMAGE_TAG=staging

# Backup settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7

# ============================================
# Development Settings (Staging-specific)
# ============================================
# Enable debug features
DEBUG_MODE=true
VERBOSE_LOGGING=true

# Mock data for testing
ENABLE_MOCK_DATA=false

# Accelerated time for testing
TIME_ACCELERATION_FACTOR=1.0
