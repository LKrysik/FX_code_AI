{
  "dashboard": {
    "id": null,
    "uid": "system-health",
    "title": "System Health Dashboard",
    "tags": ["system", "health", "performance"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m"],
      "time_options": ["15m", "1h", "6h", "24h", "7d"]
    },
    "panels": [
      {
        "id": 1,
        "type": "graph",
        "title": "EventBus Throughput (Messages/sec by Topic)",
        "gridPos": {
          "h": 10,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum by (topic) (rate(event_bus_messages_total[1m]))",
            "legendFormat": "{{topic}}",
            "refId": "A"
          }
        ],
        "options": {},
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "decimals": 1,
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "description": "EventBus message throughput per second, broken down by topic (market_data, signal_generated, etc.)"
      },
      {
        "id": 2,
        "type": "stat",
        "title": "EventBus Total Messages/sec",
        "gridPos": {
          "h": 10,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(rate(event_bus_messages_total[1m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "background",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 500,
                  "color": "yellow"
                },
                {
                  "value": 900,
                  "color": "red"
                }
              ]
            }
          }
        },
        "description": "Total EventBus message rate across all topics. Target: < 1000 msg/sec"
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Circuit Breaker State",
        "gridPos": {
          "h": 10,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "targets": [
          {
            "expr": "max(circuit_breaker_state)",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "textMode": "value",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "CLOSED",
                    "color": "green"
                  },
                  "1": {
                    "text": "HALF_OPEN",
                    "color": "yellow"
                  },
                  "2": {
                    "text": "OPEN",
                    "color": "red"
                  }
                }
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 1,
                  "color": "yellow"
                },
                {
                  "value": 2,
                  "color": "red"
                }
              ]
            }
          }
        },
        "description": "Circuit breaker state: CLOSED (0, normal), HALF_OPEN (1, testing), OPEN (2, CRITICAL - blocking all requests)"
      },
      {
        "id": 4,
        "type": "timeseries",
        "title": "API Latency (Order Submission)",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 10
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(order_submission_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(order_submission_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(order_submission_latency_seconds_bucket[5m])) by (le))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "options": {},
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 3,
            "color": {
              "mode": "palette-classic"
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "p99"
              },
              "properties": [
                {
                  "id": "custom.lineWidth",
                  "value": 2
                },
                {
                  "id": "color",
                  "value": {
                    "mode": "fixed",
                    "fixedColor": "red"
                  }
                }
              ]
            }
          ]
        },
        "description": "Order submission API latency percentiles (50th, 95th, 99th). Alert if p95 > 3 seconds"
      },
      {
        "id": 5,
        "type": "graph",
        "title": "Circuit Breaker State Timeline",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 10
        },
        "targets": [
          {
            "expr": "circuit_breaker_state",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "options": {},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 20
            },
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "CLOSED"
                  },
                  "1": {
                    "text": "HALF_OPEN"
                  },
                  "2": {
                    "text": "OPEN"
                  }
                }
              }
            ]
          }
        },
        "description": "Circuit breaker state over time per service. Shows when circuit breakers open/close"
      },
      {
        "id": 6,
        "type": "table",
        "title": "EventBus Message Breakdown (Last 5 min)",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 18
        },
        "targets": [
          {
            "expr": "sum by (topic) (increase(event_bus_messages_total[5m]))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "displayName": "Value",
              "desc": true
            }
          ]
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Value"
              },
              "properties": [
                {
                  "id": "displayName",
                  "value": "Messages"
                },
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      {
                        "value": null,
                        "color": "green"
                      },
                      {
                        "value": 1000,
                        "color": "yellow"
                      },
                      {
                        "value": 5000,
                        "color": "red"
                      }
                    ]
                  }
                }
              ]
            }
          ]
        },
        "description": "Total messages per topic in the last 5 minutes. Helps identify bottlenecks"
      },
      {
        "id": 7,
        "type": "stat",
        "title": "Process Memory Usage",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 18
        },
        "targets": [
          {
            "expr": "process_resident_memory_bytes",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "background",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 536870912,
                  "color": "yellow"
                },
                {
                  "value": 1073741824,
                  "color": "red"
                }
              ]
            }
          }
        },
        "description": "Process memory usage in bytes. Yellow at 512MB, Red at 1GB. Monitor for memory leaks"
      },
      {
        "id": 8,
        "type": "stat",
        "title": "Uptime",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 26
        },
        "targets": [
          {
            "expr": "time() - process_start_time_seconds",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 0,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "blue"
                }
              ]
            }
          }
        },
        "description": "System uptime in seconds since process start"
      },
      {
        "id": 9,
        "type": "stat",
        "title": "CPU Usage",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 26
        },
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[1m]) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "background",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 50,
                  "color": "yellow"
                },
                {
                  "value": 80,
                  "color": "red"
                }
              ]
            }
          }
        },
        "description": "CPU usage percentage. Yellow at 50%, Red at 80%"
      },
      {
        "id": 10,
        "type": "stat",
        "title": "Open File Descriptors",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 26
        },
        "targets": [
          {
            "expr": "process_open_fds",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "background",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 500,
                  "color": "yellow"
                },
                {
                  "value": 1000,
                  "color": "red"
                }
              ]
            }
          }
        },
        "description": "Number of open file descriptors. May indicate connection leaks if growing"
      },
      {
        "id": 11,
        "type": "stat",
        "title": "Max File Descriptors",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 26
        },
        "targets": [
          {
            "expr": "process_max_fds",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "blue"
                }
              ]
            }
          }
        },
        "description": "Maximum file descriptors allowed by the system"
      }
    ],
    "annotations": {
      "list": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "enable": true,
          "expr": "changes(circuit_breaker_state[1m]) > 0",
          "iconColor": "red",
          "name": "Circuit Breaker Changes",
          "step": "1m",
          "tagKeys": "service",
          "textFormat": "Circuit breaker {{service}} changed state",
          "titleFormat": "Circuit Breaker Event"
        }
      ]
    }
  },
  "overwrite": true
}
