{
  "dashboard": {
    "id": null,
    "uid": "exchange-integration",
    "title": "Exchange Integration Dashboard",
    "tags": ["exchange", "mexc", "integration"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m"],
      "time_options": ["15m", "1h", "6h", "24h", "7d"]
    },
    "templating": {
      "list": [
        {
          "name": "symbol",
          "type": "query",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "query": "label_values(orders_submitted_total, symbol)",
          "multi": true,
          "includeAll": true,
          "allValue": ".*",
          "refresh": 1,
          "current": {
            "selected": true,
            "text": "All",
            "value": "$__all"
          }
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "type": "graph",
        "title": "MEXC API Latency (Order Operations)",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(order_submission_latency_seconds_bucket{symbol=~\"$symbol\"}[5m])) by (le))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(order_submission_latency_seconds_bucket{symbol=~\"$symbol\"}[5m])) by (le))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(order_submission_latency_seconds_bucket{symbol=~\"$symbol\"}[5m])) by (le))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "options": {},
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 3,
            "color": {
              "mode": "palette-classic"
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "p99"
              },
              "properties": [
                {
                  "id": "custom.lineWidth",
                  "value": 2
                },
                {
                  "id": "color",
                  "value": {
                    "mode": "fixed",
                    "fixedColor": "red"
                  }
                }
              ]
            }
          ]
        },
        "description": "MEXC API latency for order operations (submit, cancel, query). p50, p95, p99 percentiles"
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Average MEXC API Latency",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(rate(order_submission_latency_seconds_sum{symbol=~\"$symbol\"}[5m])) / sum(rate(order_submission_latency_seconds_count{symbol=~\"$symbol\"}[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "background",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 3,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 0.5,
                  "color": "yellow"
                },
                {
                  "value": 2,
                  "color": "red"
                }
              ]
            }
          }
        },
        "description": "Average MEXC API latency. Green < 0.5s, Yellow < 2s, Red >= 2s"
      },
      {
        "id": 3,
        "type": "stat",
        "title": "MEXC API Requests/sec",
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "targets": [
          {
            "expr": "sum(rate(order_submission_latency_seconds_count{symbol=~\"$symbol\"}[1m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "background",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 8,
                  "color": "yellow"
                },
                {
                  "value": 10,
                  "color": "red"
                }
              ]
            }
          }
        },
        "description": "MEXC API request rate. Yellow at 8 req/s (approaching rate limit), Red at 10 req/s (max rate limit)"
      },
      {
        "id": 4,
        "type": "timeseries",
        "title": "MEXC API Error Rate",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "(sum(rate(orders_failed_total{symbol=~\"$symbol\"}[5m])) / sum(rate(orders_submitted_total{symbol=~\"$symbol\"}[5m]))) * 100",
            "legendFormat": "Error Rate %",
            "refId": "A"
          }
        ],
        "options": {},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2,
            "color": {
              "mode": "thresholds"
            },
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 20
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 5,
                  "color": "yellow"
                },
                {
                  "value": 10,
                  "color": "red"
                }
              ]
            }
          }
        },
        "description": "Percentage of orders failed vs submitted. Green < 5%, Yellow < 10%, Red >= 10%. Includes exchange errors, rate limits, rejections"
      },
      {
        "id": 5,
        "type": "table",
        "title": "Exchange Errors by Reason (Last Hour)",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum by (reason) (increase(orders_failed_total{symbol=~\"$symbol\"}[1h]))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "displayName": "Count",
              "desc": true
            }
          ]
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Value"
              },
              "properties": [
                {
                  "id": "displayName",
                  "value": "Count"
                },
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      {
                        "value": null,
                        "color": "green"
                      },
                      {
                        "value": 3,
                        "color": "yellow"
                      },
                      {
                        "value": 10,
                        "color": "red"
                      }
                    ]
                  }
                }
              ]
            }
          ]
        },
        "description": "Breakdown of exchange errors by reason (rate_limit, insufficient_margin, invalid_order, etc.)"
      },
      {
        "id": 6,
        "type": "stat",
        "title": "Position Sync Status",
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "time() - position_sync_last_success_timestamp",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "textMode": "value_and_name",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 30,
                  "color": "yellow"
                },
                {
                  "value": 60,
                  "color": "red"
                }
              ]
            },
            "mappings": [
              {
                "type": "special",
                "options": {
                  "match": "null",
                  "result": {
                    "text": "Never Synced",
                    "color": "red"
                  }
                }
              }
            ]
          }
        },
        "description": "Time since last successful position sync with MEXC. Red if > 60 seconds (sync failure)"
      },
      {
        "id": 7,
        "type": "stat",
        "title": "Circuit Breaker Status (MEXC)",
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 8,
          "y": 16
        },
        "targets": [
          {
            "expr": "circuit_breaker_state{service=\"mexc_adapter\"}",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "textMode": "value",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "CLOSED",
                    "color": "green"
                  },
                  "1": {
                    "text": "HALF_OPEN",
                    "color": "yellow"
                  },
                  "2": {
                    "text": "OPEN",
                    "color": "red"
                  }
                }
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 1,
                  "color": "yellow"
                },
                {
                  "value": 2,
                  "color": "red"
                }
              ]
            }
          }
        },
        "description": "MEXC circuit breaker state. OPEN = all requests blocked. HALF_OPEN = testing recovery. CLOSED = normal operation"
      },
      {
        "id": 8,
        "type": "stat",
        "title": "Total Orders (24h)",
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 16,
          "y": 16
        },
        "targets": [
          {
            "expr": "sum(increase(orders_submitted_total{symbol=~\"$symbol\"}[24h]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "blue"
                }
              ]
            }
          }
        },
        "description": "Total orders submitted to MEXC in the last 24 hours"
      },
      {
        "id": 9,
        "type": "graph",
        "title": "Order Book Depth (if available)",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 22
        },
        "targets": [
          {
            "expr": "orderbook_depth_bids{symbol=~\"$symbol\"}",
            "legendFormat": "{{symbol}} - Bids",
            "refId": "A"
          },
          {
            "expr": "orderbook_depth_asks{symbol=~\"$symbol\"}",
            "legendFormat": "{{symbol}} - Asks",
            "refId": "B"
          }
        ],
        "options": {},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "color": {
              "mode": "palette-classic"
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byRegexp",
                "options": ".*Bids.*"
              },
              "properties": [
                {
                  "id": "color",
                  "value": {
                    "mode": "fixed",
                    "fixedColor": "green"
                  }
                }
              ]
            },
            {
              "matcher": {
                "id": "byRegexp",
                "options": ".*Asks.*"
              },
              "properties": [
                {
                  "id": "color",
                  "value": {
                    "mode": "fixed",
                    "fixedColor": "red"
                  }
                }
              ]
            }
          ]
        },
        "description": "Order book depth (bids/asks) if available. Shows market liquidity"
      },
      {
        "id": 10,
        "type": "timeseries",
        "title": "Position Sync Frequency",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 22
        },
        "targets": [
          {
            "expr": "rate(position_sync_total[5m]) * 60",
            "legendFormat": "Syncs per minute",
            "refId": "A"
          }
        ],
        "options": {},
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 1,
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 20
            }
          }
        },
        "description": "Position sync frequency. Should be ~6 syncs/min (every 10 seconds). Lower = sync issues"
      },
      {
        "id": 11,
        "type": "table",
        "title": "Latest Orders Status",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 30
        },
        "targets": [
          {
            "expr": "sum by (symbol, side) (increase(orders_submitted_total{symbol=~\"$symbol\"}[5m]))",
            "format": "table",
            "instant": true,
            "refId": "A"
          },
          {
            "expr": "sum by (symbol, side) (increase(orders_filled_total{symbol=~\"$symbol\"}[5m]))",
            "format": "table",
            "instant": true,
            "refId": "B"
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "displayName": "Submitted",
              "desc": true
            }
          ]
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          }
        },
        "transformations": [
          {
            "id": "merge",
            "options": {}
          }
        ],
        "description": "Order activity breakdown by symbol and side in the last 5 minutes (submitted vs filled)"
      },
      {
        "id": 12,
        "type": "stat",
        "title": "Rate Limit Margin",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 30
        },
        "targets": [
          {
            "expr": "10 - sum(rate(order_submission_latency_seconds_count[1m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "background",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "red"
                },
                {
                  "value": 2,
                  "color": "yellow"
                },
                {
                  "value": 5,
                  "color": "green"
                }
              ]
            }
          }
        },
        "description": "Headroom before hitting MEXC rate limit (10 req/s). Shows how many more requests/sec can be made. Green > 5, Yellow > 2, Red < 2"
      }
    ],
    "annotations": {
      "list": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "enable": true,
          "expr": "changes(circuit_breaker_state{service=\"mexc_adapter\"}[1m]) > 0",
          "iconColor": "red",
          "name": "MEXC Circuit Breaker Events",
          "step": "1m",
          "textFormat": "MEXC circuit breaker state changed",
          "titleFormat": "Circuit Breaker Event"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "enable": true,
          "expr": "rate(orders_failed_total{reason=\"rate_limit\"}[1m]) > 0",
          "iconColor": "orange",
          "name": "Rate Limit Hits",
          "step": "1m",
          "textFormat": "Rate limit exceeded",
          "titleFormat": "Rate Limit"
        }
      ]
    }
  },
  "overwrite": true
}
