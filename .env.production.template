# Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to version control!

# ============================================
# MEXC Exchange API Configuration
# ============================================
# Get your API credentials from: https://www.mexc.com/user/api
MEXC_API_KEY=your_mexc_api_key_here
MEXC_API_SECRET=your_mexc_api_secret_here
MEXC_BASE_URL=https://api.mexc.com

# ============================================
# Database Configuration (QuestDB)
# ============================================
QUESTDB_HOST=questdb
QUESTDB_PORT=8812
QUESTDB_USER=admin
QUESTDB_PASSWORD=quest
QUESTDB_DATABASE=qdb

# ============================================
# Application Configuration
# ============================================
ENVIRONMENT=production
LOG_LEVEL=INFO

# Risk Management Settings
MAX_POSITIONS=3
MAX_POSITION_SIZE=0.1
DAILY_LOSS_LIMIT=0.05
MARGIN_UTILIZATION_LIMIT=0.8

# Trading Settings
DEFAULT_LEVERAGE=1
MAX_SLIPPAGE=0.001

# ============================================
# Monitoring Configuration
# ============================================
PROMETHEUS_ENABLED=true
METRICS_PORT=8080

# Grafana Admin Credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here

# ============================================
# Alerting Configuration
# ============================================
# PagerDuty (optional)
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_key_here

# Slack (optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here
ALERT_EMAIL_TO=alerts@yourdomain.com

# ============================================
# Security Configuration
# ============================================
# JWT Secret for API authentication (generate with: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=3600

# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ============================================
# Performance Configuration
# ============================================
# Worker processes
WORKER_COUNT=4

# Connection pool sizes
DB_POOL_MIN=5
DB_POOL_MAX=20

# Cache settings
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# Deployment Configuration
# ============================================
# Docker image tags
BACKEND_IMAGE_TAG=latest
FRONTEND_IMAGE_TAG=latest

# Backup settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
